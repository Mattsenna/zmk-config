#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  ESC |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | SHFT |
//                    | ALT | LWR | GUI |   | SPAC| RSE  | RET |
                        bindings = <
   &kp ESC   &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp LCTRL &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &kp LSHFT &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp RSHIFT
                  &kp LALT &mo 1 &kp LGUI   &kp SPACE &mo 2 &kp RET
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   |  -  |  +  |  [  |  ]  |  /  |   \ |
// | SHFT |     |     |     |     |     |   |  _  |  =  | "{" | "}" |  ~  | "|" |
//                    | GUI |     | SPC |   |SPAC |     | ALT |
                        bindings = <
   &kp TAB    &kp EXCL       &kp AT       &kp HASH       &kp DLLR       &kp PRCNT         &kp CARET   &kp AMPS   &kp KP_MULTIPLY &kp LPAR    &kp RPAR &kp BSPC
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &kp MINUS &kp PLUS &kp LBKT &kp RBKT &kp FSLH &kp BSLH
   &kp LSHFT  &trans       &trans       &trans       &trans       &trans         &kp UNDER   &kp EQUAL  &kp LBRC &kp RBRC    &kp TILDE &kp PIPE
                          	        &kp LGUI     &trans       &kp SPACE      &kp SPACE  &trans   &kp RALT
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  DEL |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
// | CTRL |     |     |PGUP |     |     |   | TAB | LFT |  DN |  UP | RGT |  `   |
// | SHFT |     |     |PGDN |     |     |   |PRSCN| CAPS| VOLD| VOLU| PRV |  NXT |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp  DEL  &kp N1 &kp N2 &kp N3 &kp N4 &kp N5   &kp N6 &kp N7  &kp N8 &kp N9 &kp N0 &kp BSPC
   &kp LCTRL &trans   &trans &kp PG_UP   &trans   &trans      &kp TAB &kp LEFT &kp DOWN        &kp UP &kp RIGHT &kp GRAVE
   &kp LSHFT &trans   &trans &kp PG_DN   &trans   &trans      &kp PSCRN &kp CAPS &kp K_VOL_DN &kp K_VOL_UP        &kp C_PREV &kp C_NEXT
                    	     &kp LGUI &trans   &kp SPACE   &kp SPACE   &trans    &kp RALT
                        >;
                };
        };
};
